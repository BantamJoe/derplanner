domain run_12
{
    fact a(int8, int8)
    prim p!(int32)

    task t()
    {
        case -> [ s(1), r(2) ]
    }

    task s(P)
    {
        each (U = P) & a(X, U) & (V = X + 2) -> [ p!(V) ]
    }

    task r(P)
    {
        // `V` type depends only on parameter `P` and fact bound argument `X`
        case a(X, 0) & (V = X + P) -> [ p!(0) ]
    }
}
