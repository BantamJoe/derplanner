//:
//: plnnr::add_entry(ob, plnnr::Id32(1), plnnr::Vec3(0.f, -1.f, 0.f));
//: plnnr::add_entry(ob, plnnr::Id32(2), plnnr::Vec3(3.f,  0.5f, 0.f));
